{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],

    "jsx": "react-jsx",
    "paths": {
      "@moduk/frontend/react": [
        "./src/react/"
      ],
      "@moduk/frontend/client": [
        "./src/client/"
      ]
    }
  },
  "exclude": ["**/dist", "node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
